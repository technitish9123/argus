{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "morpho.repay",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "protocol": { "const": "morpho" },
    "contract": {
      "anyOf": [
        { "const": "morpho" },
        { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" }
      ]
    },
    "method": { "const": "repay" },
    "params": {
      "type": "object",
      "additionalProperties": false,
      "required": ["market", "asset", "assets", "onBehalf", "payer"],
      "properties": {
        "market": { "type": "string", "pattern": "^0x[a-fA-F0-9]{64}$" },
        "asset": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
        "assets": { "type": "string", "pattern": "^[0-9]+$" },
        "onBehalf": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
        "payer": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" }
      }
    },
    "chainId": { "type": "integer", "minimum": 1 },

    "x-abi": {
      "type": "string",
      "const": "function repay((address loanToken,address collateralToken,address oracle,address irm,uint256 lltv) marketParams,uint256 assets,uint256 shares,address onBehalf,bytes data)"
    },

    "x-spenderRole": { "type": "string", "const": "morpho" },
    "x-debits": {
      "x-hints": [{ "amountKey": "assets", "tokenParam": "asset" }]
    }
  },
  "required": ["protocol", "contract", "method", "params"]
}

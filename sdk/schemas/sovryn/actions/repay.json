{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "sovryn.repay",
  "type": "object",
  "properties": {
    "protocol": { "const": "sovryn" },
    "contract": { "const": "iUSDT" },
    "method":   { "const": "repayBorrow" },
    "params": {
      "type": "object",
      "required": ["amount"],
      "properties": {
        "amount": { "type": "string", "pattern": "^[0-9]+$" }
      }
    }
  },
  "required": ["protocol","contract","method","params"],
  "x-abi": "function repayBorrow(uint256 repayAmount) external returns (uint256)"
}

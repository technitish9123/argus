{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "sovryn.supply",
  "type": "object",
  "properties": {
    "protocol": { "const": "sovryn" },
    "contract": { "const": "iRBTC" },
    "method":   { "const": "mint" },
    "params": {
      "type": "object",
      "required": ["amount"],
      "properties": {
        "amount": { "type": "string", "pattern": "^[0-9]+$" }
      }
    },
    "chainId": { "type": "integer", "minimum": 1 }
  },
  "required": ["protocol","contract","method","params"],
  "x-abi": "function mint(uint256 amount) external payable",
  "x-spenderRole": "iRBTC",
  "x-debits": [
    { "amountKey": "amount", "tokenParam": "WRBTC" }
  ]
}

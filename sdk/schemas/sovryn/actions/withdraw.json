{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "sovryn.withdraw",
  "type": "object",
  "properties": {
    "protocol": { "const": "sovryn" },
    "contract": { "const": "iRBTC" },
    "method":   { "const": "redeem" },
    "params": {
      "type": "object",
      "required": ["amount"],
      "properties": {
        "amount": { "type": "string", "pattern": "^[0-9]+$" }
      }
    }
  },
  "required": ["protocol","contract","method","params"],
  "x-abi": "function redeem(uint256 tokenAmount) external returns (uint256)"
}

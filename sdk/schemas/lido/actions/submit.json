{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "lido.submit",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "protocol": { "const": "lido" },
    "contract": { "const": "steth" },
    "method":   { "const": "submit" },
    "params": {
      "type": "object",
      "additionalProperties": false,
      "required": ["referral"],
      "properties": { "referral": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" } }
    },
    "value":   { "type": "string", "pattern": "^[0-9]+$", "description": "ETH value in wei to send" },
    "chainId": { "type": "integer", "minimum": 1 },
    "x-abi":   { "type": "string", "const": "function submit(address referral) payable returns (uint256)" }
  },
  "required": ["protocol","contract","method","params","value"]
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "balancer.swap",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "protocol": { "const": "balancer" },
    "contract": {
      "anyOf": [
        { "const": "vault" },
        { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" }
      ]
    },
    "method": { "const": "swap" },
    "params": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "poolId",
        "kind",
        "assetIn",
        "assetOut",
        "amountIn",
        "recipient",
        "deadline",
        "limit",
        "userData"
      ],
      "properties": {
        "poolId": { "type": "string", "pattern": "^0x[a-fA-F0-9]{64}$" },
        "kind": {
          "type": "integer",
          "enum": [0, 1],
          "description": "0=GIVEN_IN, 1=GIVEN_OUT"
        },
        "assetIn": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
        "assetOut": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
        "amountIn": { "type": "string", "pattern": "^[0-9]+$" },
        "recipient": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
        "deadline": { "type": "integer", "minimum": 0 },
        "limit": {
          "type": "string",
          "pattern": "^[0-9]+$",
          "description": "min out (GIVEN_IN) or max in (GIVEN_OUT)"
        },
        "userData": { "type": "string", "pattern": "^0x[a-fA-F0-9]*$" }
      }
    },
    "chainId": { "type": "integer", "minimum": 1 },
    "x-abi": {
      "type": "string",
      "const": "function swap((bytes32 poolId,uint8 kind,address assetIn,address assetOut,uint256 amount,bytes userData) swap, (address sender,bool fromInternalBalance,address recipient,bool toInternalBalance) funds, uint256 limit, uint256 deadline) returns (uint256)"
    },
    "x-spenderRole": { "type": "string", "const": "vault" },
    "x-debits": {
      "x-hints": [
        { "amountKey": "amount", "tokenParam": "assetIn" },
        { "amountKey": "limit", "tokenParam": "assetIn" }
      ]
    }
  },
  "required": ["protocol", "contract", "method", "params"]
}

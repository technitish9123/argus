{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ethena.depositUSDe",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "protocol": { "const": "ethena" },
    "contract": { "const": "susde" },
    "method": { "const": "deposit" },
    "params": {
      "type": "object",
      "additionalProperties": false,
      "required": ["assets", "receiver"],
      "properties": {
        "assets": { "type": "string", "pattern": "^[0-9]+$" },
        "receiver": { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" }
      }
    },
    "chainId": { "type": "integer", "minimum": 1 },

    "x-abi": {
      "type": "string",
      "const": "function deposit(uint256 assets,address receiver) returns (uint256 shares)"
    },

    "x-spenderRole": {
      "type": "string",
      "const": "susde"
    },
    "x-debits": {
      "x-hints": [
        { "amountKey": "assets", "tokenRole": "usde" }
      ]
    }
  },
  "required": ["protocol", "contract", "method", "params"]
}

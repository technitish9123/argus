{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "aave_v3.supply",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "protocol": { "const": "aave_v3" },
    "contract": { "const": "pool" },
    "method":   { "const": "supply" },
    "params": {
      "type": "object",
      "additionalProperties": false,
      "required": ["asset","amount","onBehalfOf","referralCode"],
      "properties": {
        "asset":       { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
        "amount":      { "type": "string", "pattern": "^[0-9]+$" },
        "onBehalfOf":  { "type": "string", "pattern": "^0x[a-fA-F0-9]{40}$" },
        "referralCode":{ "type": "integer", "minimum": 0, "default": 0 }
      }
    },
    "chainId": { "type": "integer", "minimum": 1 }
  },
  "required": ["protocol","contract","method","params"],
  "x-abi": "function supply(address asset, uint256 amount, address onBehalfOf, uint16 referralCode)",
  "x-spenderRole": "pool",
  "x-debits": [
    { "amountKey": "amount", "tokenParam": "asset" }
  ]
}

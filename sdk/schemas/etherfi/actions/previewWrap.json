{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "etherfi.previewWrap",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "protocol": { "const": "etherfi" },
    "contract": { "const": "weeth" },
    "method":   { "const": "previewWrap" },
    "params": {
      "type": "object",
      "additionalProperties": false,
      "required": ["eETHAmount"],
      "properties": { "eETHAmount": { "type": "string", "pattern": "^[0-9]+$" } }
    },
    "chainId": { "type": "integer", "minimum": 1 },
    "x-abi":   { "type": "string", "const": "function previewWrap(uint256 eETHAmount) view returns (uint256)" }
  },
  "required": ["protocol","contract","method","params"]
}
